{
  "project_name": "BankEaseAI",
  "project_type": "Modern Web Application (React + Next.js + FastAPI)",
  "description": "银行对账单AI处理应用，现代化前后端分离架构，PDF转Excel/CSV",
  "main_files": {
    "frontend": "frontend/",
    "backend": "api/main.py",
    "legacy_ui": "script/main.py"
  },
  "virtual_env": "bankeaseai",
  "ports": {
    "frontend": 3000,
    "backend": 8000,
    "legacy_ui": 8501
  },
  "startup_commands": {
    "frontend_dev": "cd frontend && npm run dev",
    "frontend_build": "cd frontend && npm run build",
    "frontend_start": "cd frontend && npm start",
    "backend_dev": "source bankeaseai/bin/activate && uvicorn api.main:app --host 0.0.0.0 --port 8000 --reload",
    "backend_prod": "source bankeaseai/bin/activate && uvicorn api.main:app --host 0.0.0.0 --port 8000",
    "legacy_ui": "source bankeaseai/bin/activate && python -m streamlit run script/main.py",
    "api_script": "./start_api.sh",
    "legacy_script": "./start_production.sh"
  },
  "access_urls": {
    "frontend": {
      "local": "http://localhost:3000",
      "network": "http://10.0.0.156:3000",
      "external": "http://204.188.233.66:3000"
    },
    "backend": {
      "local": "http://localhost:8000",
      "docs": "http://localhost:8000/docs",
      "health": "http://localhost:8000/health"
    },
    "legacy_ui": {
      "local": "http://localhost:8501",
      "network": "http://10.0.0.156:8501"
    }
  },
  "environment_variables": {
    "required": ["OPENAI_API_KEY"],
    "optional": ["ANTHROPIC_API_KEY", "OUTPUT_DIR"],
    "frontend": ["NEXT_PUBLIC_API_URL"],
    "backend": ["JWT_SECRET_KEY", "DATABASE_URL"],
    "production": ["NODE_ENV=production"]
  },
  "features": {
    "core": [
      "PDF银行对账单解析",
      "AI智能文本处理（GPT-4o）",
      "数据格式转换（Excel/CSV）",
      "用户认证系统（注册/登录）",
      "使用量限制和权限控制"
    ],
    "architecture": [
      "现代化前后端分离架构",
      "React + Next.js 前端",
      "FastAPI 后端服务",
      "RESTful API设计",
      "JWT令牌认证",
      "异步处理支持",
      "SSR/SSG支持",
      "响应式设计"
    ],
    "security": [
      "PBKDF2+盐值密码哈希",
      "JWT令牌认证",
      "CORS跨域支持",
      "生产级错误处理"
    ],
    "performance": [
      "WAL模式数据库",
      "并发访问支持",
      "异步文件处理",
      "健康检查监控"
    ]
  },
  "database": {
    "type": "SQLite",
    "file": "simple_users.db",
    "features": ["WAL模式", "并发访问", "PBKDF2+盐值密码哈希"]
  },
  "api_endpoints": {
    "auth": [
      "POST /api/auth/register",
      "POST /api/auth/login",
      "GET /api/auth/me",
      "POST /api/auth/logout"
    ],
    "files": [
      "POST /api/files/upload",
      "POST /api/files/process",
      "GET /api/files/download/{file_id}",
      "GET /api/files/status/{task_id}"
    ],
    "users": [
      "GET /api/users/profile",
      "PUT /api/users/profile",
      "GET /api/users/usage",
      "GET /api/users/permissions"
    ],
    "dashboard": [
      "GET /api/dashboard/stats",
      "GET /api/dashboard/database-stats",
      "GET /api/dashboard/recent-activity"
    ]
  },
  "ai_guidance": {
    "when_user_opens_project": [
      "检查Node.js和Python环境",
      "提供启动命令选项（前端、后端、或传统UI）",
      "根据用户需求选择开发或生产环境",
      "提供访问URL（前端:3000, 后端:8000, 传统UI:8501）",
      "解释现代化架构特性和技术栈"
    ],
    "development_workflow": [
      "前端开发：React + Next.js + TypeScript",
      "后端开发：FastAPI + Python + SQLite",
      "API优先设计：所有业务逻辑在后端",
      "现代化UI：响应式设计、移动端支持",
      "部署：Vercel (前端) + Railway/Heroku (后端)"
    ]
  }
}
